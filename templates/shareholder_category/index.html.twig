{% extends 'base.html.twig' %}

{% block title %}ShareholderCategory index{% endblock %}

{% block body %}
    <h1>ShareholderCategory index</h1>

    <table class="table">
        <thead>
            <tr>
                <th>Id</th>
                <th>Letter</th>
                <th>Description</th>
                <th>actions</th>
            </tr>
        </thead>
        <tbody>
        {% for shareholder_category in shareholder_categories %}
            <tr>
                <td>{{ shareholder_category.id }}</td>
                <td>{{ shareholder_category.letter }}</td>
                <td>{{ shareholder_category.description }}</td>
                <td>
                    <a href="{{ path('app_shareholder_category_show', {'id': shareholder_category.id}) }}">show</a>
                    <a href="{{ path('app_shareholder_category_edit', {'id': shareholder_category.id}) }}">edit</a>
                </td>
            </tr>
        {% else %}
            <tr>
                <td colspan="4">no records found</td>
            </tr>
        {% endfor %}
        </tbody>
    </table>

    <a href="{{ path('app_shareholder_category_new') }}">Create new</a>
{% endblock %}
