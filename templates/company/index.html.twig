{% extends 'base.html.twig' %}

{% block title %}Empresas{% endblock %}

{% block pagination %}
{% if maxPages > 1 %}
<ul class="pagination pg-blue">
    {# `«` arrow  #}
    <li class="page-item{{ thisPage == 1 ? ' disabled' }}">
        <a class="page-link" href="{{ path(indexURL, {page: thisPage-1 < 1 ? 1 : thisPage-1}) }}">«</a>
    </li>

    {# Render each page number #}
    {% for i in 1..maxPages %}
        <li class="page-item{{ thisPage == i ? ' active' }}">
            <a class="page-link" href="{{ path(indexURL, {page: i}) }}">{{ i }}</a>
        </li>
    {% endfor %}

    {# `»` arrow #}
    <li class="page-item{{ thisPage == maxPages ? ' disabled' }}">
        <a class="page-link" href="{{ path(indexURL, {page: thisPage+1 <= maxPages ? thisPage+1 : thisPage}) }}">»</a>
    </li>
</ul>
{% endif %}

{% endblock %}

{% block body %}
    <h1>Empresas</h1>
    {% set indexURL = 'company_index' %}
    {{ block('pagination') }}
    <table class="table">
        <thead>
            <tr>
                <th>Nombre largo</th>
                <th>Nombre corto</th>
                <th>País</th>
                <th>Activa</th>
                <th>Nivel</th>
                <th>Notas</th>
            </tr>
        </thead>
        <tbody>
        {% for company in companies %}
            <tr>
                <td><a href="{{ path('company_show', {'id': company.id}) }}">{{ company.fullname }}</a></td>
                <td>{{ company.ShortName }}</td>
                <td>{{ company.country }}</td>
                <td>{{ company.active ? 'Yes' : 'No' }}</td>
                <td>{{ company.level }}</td>
                <td>{{ company.notes }}</td>
            </tr>
        {% else %}
            <tr>
                <td colspan="7">no records found</td>
            </tr>
        {% endfor %}
        </tbody>
    </table>
    {{ block('pagination') }}

    <a href="{{ path('company_new') }}">Create new</a>
{% endblock %}
