{% if parent.ownerSubsidiaries|length > 0 %}
    {# <h2>Participadas</h2> #}
    <div class="row">
        <div class="col-3 font-weight-bold">Participada</div>
        <div class="col font-weight-bold">País</div>
        <div class="col font-weight-bold">% Total</div>
    </div>
    {% for entity in parent.ownerSubsidiaries %}
        <div class="row border">
            <div class="col-3 border-right"><a href="{{ path(prefix ~ 'subsidiary_edit', { 'id': entity.id }) }}">{{ entity.owned }}</a></div>
            <div class="col">{{ entity.owned.country }}</div>
            <div class="col">{{ entity.percent|number_format(2, '.', ',') }} %</div>
        </div>
    {% endfor %}
{% else %}
    <p>No hay participadas para esta empresa</p>
{% endif %}
<br>
<p><a href="{{ path(prefix ~ 'subsidiary_new', {'id': parent.id } )}}">Añadir participada</a></p>
