{% extends 'base.html.twig' %}

{% block title %}Empresa {{ company }}{% endblock %}

{% block body %}
    <h1>{{ company.fullname }}</h1>

    <div class="row">
        <div class="col-2">Nombre corto</div>
        <div class="col-1">País</div>
        <div class="col-3">Nivel</div>
        <div class="col-1">Activa</div>
    </div>
    <div class="row">
        <div class="col-2">
            <a href="{{ path('company_edit', {'id': company.id}) }}">{{ company.ShortName == '' ? '(no tiene)' : company.ShortName }}</a>
        </div>
        <div class="col-1">{{ company.country }}</div>
        <div class="col-3">{{ company.level }}</div>
        <div class="col-1">{{ company.active ? 'Sí' : 'No' }}</div>
    </div>
    <div class="row">
    <div class="col-12">Notas</div>
    </div>
    <div class="row">
        <div class="col-12">{{ company.notes }}</div>
    </div>


        <!-- Tabs navs -->
        {% set tabname = 'myTabList' %}{% if activetab is not defined %}{% set activetab = 'incomings' %}{% endif %}
        <ul class="nav nav-tabs md-tabs" id="{{tabname}}" role="tablist">
            {% for tab in tabs %}
                <li class="nav-item">
                    <a class="nav-link{{ tab.n == activetab ? ' active' }}" id="{{ tab.n }}-tab" data-toggle="tab" href="#{{ tab.n }}" role="tab" aria-controls="{{ tab.n }}" aria-selected="true">{{ tab.t }}</a>
                </li>
            {% endfor %}
        </ul>
        <!-- Tabs navs -->

          <!-- Tabs content -->
          <div class="tab-content border-right border-bottom border-left" id="{{tabname}}-content">
            {% for tab in tabs %}
                <!-- Tab X -->
                <div class="tab-pane fade{{ tab.n == activetab ? ' active' }}" id="{{ tab.n }}" role="tabpanel" aria-labelledby="{{ tab.n }}-tab">
                {{ include('company/' ~ tab.n ~ '/index.html.twig') }}
                </div>
                <!-- Fin TabX -->
            {% endfor %}
        </div>
        <!-- Tabs content -->



{% endblock %}
