{% if company.companyEvents|length > 0 %}
    {# <h2>Eventos</h2> #}
    <div class="row">
        <div class="col-3 font-weight-bold">Fecha</div>
        <div class="col font-weight-bold">Descripción</div>
    </div>
    {% for event in company.companyEvents %}
        <div class="row border">
            <div class="col-3 border-right"><a href="{{ path(prefix ~ 'event_edit', { 'id': event.id }) }}">{{ event.date|date('d/m/Y') }}</a></div>
            <div class="col">{{ event.description }}</div>
        </div>
    {% endfor %}
{% else %}
    <p>No hay eventos para esta empresa</p>
{% endif %}
<br>
<p><a href="{{ path(prefix ~ 'event_new', {'id': company.id } )}}">Añadir evento</a></p>
