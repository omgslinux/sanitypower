{% extends 'base.html.twig' %}

{% block title %}Empresas{% endblock %}

{% block body %}
    <h1>Empresas</h1>

    <table class="table">
        <thead>
            <tr>
                <th>Nombre largo</th>
                <th>Nombre corto</th>
                <th>Pa√≠s</th>
                <th>Activa</th>
                <th>Nivel</th>
                <th>Notas</th>
            </tr>
        </thead>
        <tbody>
        {% for company in companies %}
            <tr>
                <td><a href="{{ path('company_show', {'id': company.id}) }}">{{ company.fullname }}</a></td>
                <td>{{ company.ShortName }}</td>
                <td>{{ company.country }}</td>
                <td>{{ company.active ? 'Yes' : 'No' }}</td>
