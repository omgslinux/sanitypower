{% set total = parent.ownerSubsidiaries|length %}{% if total > 0 %}
    <h4>Total: {{ total }} participaciones</h4>
    <div class="row">
        <div class="col-8 font-weight-bold">Participada</div>
        <div class="col font-weight-bold">Pa√≠s</div>
        <div class="col font-weight-bold">Tipo</div>
        <div class="col font-weight-bold">% Directo</div>
        <div class="col font-weight-bold">% Total</div>
    </div>
    {% for entity in parent.ownerSubsidiaries %}
        <div class="row border">
            <div class="col-8 border-right">{{ entity.owner }}&nbsp;
                <a href="{{ path(prefix ~ 'show', { 'id': entity.owner.id }) }}" title="Ver la empresa participada"><i class="fa fa-home"></i></a>
            {% if entity.owner.inlist %}<i class="fa-solid fa-star" title="Forma parte de la red"></i>{% endif %}
            </div>
            <div class="col">{{ entity.owner.country }}</div>
            <div class="col" title="{{entity.owner.category.description }}">{{ entity.owner.category.letter }}</div>
            <div class="col">{{ entity.direct == 0 ? '--' : entity.direct == 50.01 ? ">50": entity.direct|number_format(2, '.', ',') }}</div>
            <div class="col">{{ entity.percent == 0 ? '--': entity.percent == 50.01 ? ">50": entity.percent|number_format(2, '.', ',') }}</div>
        </div>
    {% endfor %}
{% else %}
    <p>No hay participadas para esta empresa</p>
{% endif %}
